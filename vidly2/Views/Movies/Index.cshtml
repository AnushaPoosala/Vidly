@model IEnumerable<vidly2.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font:30px">Movies</h2>

    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })

<table class="table table-bordered table-hover">
    @if (!Model.Any())
    {
        <caption>We dont have any Movies</caption>
    }
    else
    {
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        foreach (var movie in Model)
        {
            <tr>
                <td>
                    @*<a href=/Movies/Details/@movie.Id>@movie.Name</a>*@
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
    }
</table>

